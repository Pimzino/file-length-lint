{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "watch",
			"dependsOn": ["watch:client", "watch:server", "watch:extension"],
			"problemMatcher": ["$tsc-watch"],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "watch:client",
			"type": "npm",
			"script": "watch:client",
			"problemMatcher": ["$tsc-watch"],
			"isBackground": true,
			"presentation": {
				"reveal": "never"
			}
		},
		{
			"label": "watch:server",
			"type": "npm",
			"script": "watch:server",
			"problemMatcher": ["$tsc-watch"],
			"isBackground": true,
			"presentation": {
				"reveal": "never"
			}
		},
		{
			"label": "watch:extension",
			"type": "npm",
			"script": "watch",
			"problemMatcher": ["$tsc-watch"],
			"isBackground": true,
			"presentation": {
				"reveal": "never"
			}
		},
		{
			"label": "compile",
			"dependsOn": ["compile:client", "compile:server", "compile:extension"],
			"problemMatcher": ["$tsc"]
		},
		{
			"label": "compile:client",
			"type": "npm",
			"script": "compile:client",
			"problemMatcher": ["$tsc"]
		},
		{
			"label": "compile:server",
			"type": "npm",
			"script": "compile:server",
			"problemMatcher": ["$tsc"]
		},
		{
			"label": "compile:extension",
			"type": "npm",
			"script": "compile",
			"problemMatcher": ["$tsc"]
		}
	]
}
