{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "watch",
			"type": "npm",
			"script": "watch",
			"problemMatcher": ["$tsc-watch"],
			"isBackground": true,
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"reveal": "never"
			}
		},
		{
			"label": "compile",
			"type": "npm",
			"script": "compile",
			"problemMatcher": ["$tsc"],
			"group": "build"
		},
		{
			"label": "package",
			"type": "npm",
			"script": "package",
			"problemMatcher": ["$tsc"],
			"group": "build"
		},
		{
			"label": "check-types",
			"type": "npm",
			"script": "check-types",
			"problemMatcher": ["$tsc"],
			"group": "build"
		}
	]
}
